{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "NodeNext",
    "moduleResolution": "NodeNext",                                
    "esModuleInterop": true,
    "noEmit": true,                             
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "strict": true,                                     
    "skipLibCheck": true                                 
  }
}
