{
  "compilerOptions": {
    "target": "es2018",  
    "module": "CommonJS",                              
    "moduleResolution": "node",                                
    "esModuleInterop": true,
    "noEmit": true,                             
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "strict": true,                                     
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"                                 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
